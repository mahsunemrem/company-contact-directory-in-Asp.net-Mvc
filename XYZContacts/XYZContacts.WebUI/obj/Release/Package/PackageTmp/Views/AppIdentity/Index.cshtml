@model IEnumerable<XYZContacts.Entities.AppIdentity>

@{
    ViewBag.Title = "Index";
}

<div class="container mt-5">
    <h2>AppIdentity List</h2>
   
    <p>
        @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-success " })
    </p>
    <table class="table table-striped">
        <hr />
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.AppRole.RoleName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IdentityState)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AppRole.RoleName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.IdentityState)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary " }) 
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning " }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger " } )
            </td>
        </tr>
        }

    </table>
</div>