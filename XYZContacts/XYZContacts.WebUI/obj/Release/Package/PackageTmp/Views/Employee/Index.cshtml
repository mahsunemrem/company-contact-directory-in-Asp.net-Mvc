@model IEnumerable<XYZContacts.Entities.Employee>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
}
<div class="container mt-5">
    <h2>Employee List</h2>

    <p>
        @Html.ActionLink("Create New", "Create",null,new { @class = "btn btn-success " } )
    </p>


    @Html.Grid(Model).Columns(column =>
{
    column.Add(m => m.Name).Titled("Name").Sortable(true).Filterable(true);
    column.Add(m => m.Surname).Titled("Surname").Sortable(true).Filterable(true);
    column.Add(m => m.PhoneNumbersI).Titled("Phone Numbers I").Sortable(true).Filterable(true);
    column.Add(m => m.Department.DepartmentName).Titled("Departmen").Sortable(true).Filterable(true);

    column.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(o => Html.ActionLink("Details", "Details", "Employee", new { id = o.Id }, new { @class = "btn btn-primary" }));

    column.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(o => Html.ActionLink("Edit", "Edit", "Employee", new { id = o.Id }, new { @class = "btn btn-warning" }));

    column.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(o => Html.ActionLink("Delete", "Delete", "Employee", new { id = o.Id }, new { @class = "btn btn-danger" }));


}).WithPaging(20)
</div>



