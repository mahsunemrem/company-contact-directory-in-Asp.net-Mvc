                                <h2>Title</h2>
                                <p>
                                    <h3><span class="badge badge-success badge-lg">@Model.Title.TitleName </span></h3>
                                </p>
                            </div>

                            <div class="col-md-12">

                                <table class="table table-hover table-striped">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <strong>Date Of Start:</strong> @Model.DateOfStart.ToShortDateString()
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Phone Numbers I :</strong> @Model.PhoneNumbersI
                                            </td>
                                        </tr>
                                        <tr>

                                            <td>
                                                <strong>Phone Numbers  II :</strong> @Model.PhoneNumbersII
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Email :</strong> @Model.Email
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Adress : </strong> deleted My Board1 in
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Adress : </strong> deleted My Board1 in
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Adress : </strong> deleted My Board1 in
                                            </td>

                                        </tr>

                                    </tbody>
                                </table>
                            </div>

                            <div class="row">
                                
                                    <br />

                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-actions ">
                                            <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning btn-lg" })
                                        </div>
                                    }
                               
                            </div>
                        </div>


                    </div>

                </div>
            </div>
            
        </div>
    </div>
</div>